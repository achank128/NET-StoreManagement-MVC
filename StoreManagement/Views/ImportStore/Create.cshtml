@model ImportStore

@{
    ViewData["Title"] = "Add Import Store";
}

<div class="row text">
    <div class="col-md-10 offset-1">
        <div>
            <h2>Thêm Phiếu nhập kho</h2>
        </div>
        <div class="row">
            <div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <span class="text-danger">@ViewData["error"]</span>

                    <div class="form-group mb-2">
                        <label asp-for="ImporterName" class="control-label"></label>
                        <input id="ImporterName" asp-for="ImporterName" class="form-control" />
                        <span asp-validation-for="ImporterName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Supplier" class="control-label"></label>
                        <input id="Supplier" asp-for="Supplier" class="form-control" />
                        <span asp-validation-for="Supplier" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ImportDate" class="control-label"></label>
                        <input id="ImportDate" asp-for="ImportDate" class="form-control" type="date" />
                        <span asp-validation-for="ImportDate" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <p class="mb-0">Chi tiết phiếu nhập kho:</p>
                        <table id="table" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Giá Nhập</th>
                                    <th class="text-center">
                                        <button id="add-product-item" class="btn btn-success">
                                            <i class="bi bi-plus-square"></i> Thêm
                                        </button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="product-items">
                            </tbody>
                        </table>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Total" class="control-label"></label>
                        <input id="Total" class="form-control" type="number" readonly />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
                        <button id="save" type="submit" class="btn btn-success">Lưu lại</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/ImportStore/Create.js?v=@DateTime.Now.ToString()"></script>
}