@model ImportStore

@{
    ViewData["Title"] = "Detail Import Store";
}

<div class="row text">
    <div class="col-md-10 offset-1">
        <h2>Chi tiết phiếu nhập kho</h2>
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label asp-for="ImporterName" class="control-label"></label>
                    <input asp-for="ImporterName" class="form-control" readonly />
                    <span asp-validation-for="ImporterName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Supplier" class="control-label"></label>
                    <input asp-for="Supplier" class="form-control" readonly />
                    <span asp-validation-for="Supplier" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="ImportDate" class="control-label"></label>
                    <input asp-for="ImportDate" class="form-control" type="date" readonly />
                    <span asp-validation-for="ImportDate" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <p class="mb-0">Chi tiết phiếu nhập kho:</p>
                    <table id="table" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá bán</th>
                            </tr>
                        </thead>
                        <tbody class="product-items">
                            @foreach (var item in Model.ImportStoreDetails)
                            {
                                <tr class="product-item">
                                    <td>
                                        <input asp-for="@item.Product.ProductName" class="form-control" />
                                    </td>
                                    <td><input asp-for="@item.Quantity" class="form-control" /></td>
                                    <td><input asp-for="@item.ImportPrice" class="form-control" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" class="form-control" readonly />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between">
                    <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
