@model ImportStore

@{
    ViewData["Title"] = "Edit Import Store";
}

<div class="row text">
    <div class="col-md-10 offset-1">
        <h2>Chỉnh sửa phiếu nhập kho</h2>
        <div class="row">
            <div>
                <form asp-action="Edit" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <span class="text-danger">@ViewData["error"]</span>

                    <div class="form-group mb-2">
                        <label asp-for="ImporterName" class="control-label"></label>
                        <input asp-for="Id" id="ImportStoreId" type="hidden" required />
                        <input asp-for="ImporterName" id="ImporterName" class="form-control" />
                        <span asp-validation-for="ImporterName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Supplier" class="control-label"></label>
                        <input asp-for="Supplier" id="Supplier" class="form-control" required />
                        <span asp-validation-for="Supplier" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ImportDate" class="control-label"></label>
                        <input asp-for="ImportDate" id="ImportDate" class="form-control" type="date" required />
                        <span asp-validation-for="ImportDate" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <p class="mb-0">Chi tiết phiếu nhập kho:</p>
                        <table id="table" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Giá Nhập</th>
                                    <th class="text-center">
                                        <button id="add-product-item" class="btn btn-success">
                                            <i class="bi bi-plus-square"></i> Thêm
                                        </button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="product-items">
                                @foreach (var item in Model.ImportStoreDetails)
                                {
                                    <tr class="product-item">
                                        <td>
                                            <input id="ProductItemId" asp-for="@item.Id" type="hidden" />
                                            <select
                                                asp-for="@item.ProductId"
                                                class="Product form-control"
                                                asp-items="ViewBag.ProductsList">
                                            </select>
                                        </td>
                                        <td><input type="number" asp-for="@item.Product.Price" class="ProductPrice form-control" readonly /></td>
                                        <td><input type="number" asp-for="@item.Quantity" class="Quantity form-control" min="0" required /></td>
                                        <td><input type="number" asp-for="@item.ImportPrice" class="Price form-control" min="0" required /></td>
                                        <td class="text-center align-middle">
                                            <button class="btn btn-outline-danger btn-sm"><i class="bi bi-x"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Total" class="control-label"></label>
                        <input asp-for="Total" class="form-control" readonly />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
                        <button id="save" type="submit" class="btn btn-success">Lưu lại</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/ImportStore/Edit.js?v=@DateTime.Now.ToString()"></script>
}