@model ExportStore

@{
    ViewData["Title"] = "Edit Export Store";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h2>Chỉnh sửa phiếu xuất kho</h2>
        <div class="row">
            <div>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <span class="text-danger">@ViewData["error"]</span>

                    <div class="form-group mb-2">
                        <label asp-for="ExporterName" class="control-label"></label>
                        <input asp-for="Id" id="ExportStoreId" type="hidden" />
                        <input asp-for="ExporterName" id="ExporterName" class="form-control" />
                        <span asp-validation-for="ExporterName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Customer" class="control-label"></label>
                        <input asp-for="Customer" id="Customer" class="form-control" />
                        <span asp-validation-for="Customer" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ExportDate" class="control-label"></label>
                        <input asp-for="ExportDate" id="ExportDate" class="form-control" type="date" />
                        <span asp-validation-for="ExportDate" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <p>Chi tiết phiếu nhập kho:</p>
                        <table id="table" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá bán</th>
                                    <th class="text-center">
                                        <button id="add-product-item" class="btn btn-success">
                                            <i class="bi bi-plus-square"></i> Thêm
                                        </button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="product-items">
                                @foreach (var item in Model.ExportStoreDetails)
                                {
                                    <tr class="product-item">
                                        <td>
                                            <input id="ProductItemId" asp-for="@item.Id" type="hidden" />
                                            <select id="Product" asp-for="@item.ProductId" class="form-control" asp-items="ViewBag.ProductsList"></select>
                                        </td>
                                        <td><input id="Quantity" type="number" asp-for="@item.Quantity" class="form-control" /></td>
                                        <td><input id="Price" type="number" asp-for="@item.ExportPrice" class="form-control" /></td>
                                        <td class="text-center align-middle">
                                            <button class="btn btn-outline-danger btn-sm"><i class="bi bi-x"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Total" class="control-label"></label>
                        <input asp-for="Total" class="form-control" readonly />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
                        <button id="save" type="submit" class="btn btn-success">Lưu lại</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/ExportStore/Edit.js"></script>
}