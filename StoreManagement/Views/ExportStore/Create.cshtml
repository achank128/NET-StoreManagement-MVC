@model ExportStore

@{
    ViewData["Title"] = "Add Export Store";
}

<div class="row text">
    <div class="col-md-10 offset-1">
        <h2>Thêm Phiếu xuất kho</h2>
        <div class="row">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <span class="text-danger">@ViewData["error"]</span>

                    <div class="form-group mb-2">
                        <label asp-for="ExporterName" class="control-label"></label>
                        <input asp-for="ExporterName" class="form-control" />
                        <span asp-validation-for="ExporterName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Customer" class="control-label"></label>
                        <input asp-for="Customer" class="form-control" />
                        <span asp-validation-for="Customer" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ExportDate" class="control-label"></label>
                        <input asp-for="ExportDate" class="form-control" type="date" />
                        <span asp-validation-for="ExportDate" class="text-danger"></span>
                    </div>
                    @*<div class="form-group mb-2">
                        <label asp-for="ProductId" class="control-label"></label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products"></select>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>*@
                    <div class="form-group mb-4">
                        <label asp-for="Total" class="control-label"></label>
                        <input asp-for="Total" class="form-control" type="number" />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>

                    
                   
                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
                        <input type="submit" value="Lưu lại" class="btn btn-success float-right" />
                    </div>
                </form>
                <div>
                <h4>Chi tiết phiếu nhập kho:</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá bán</th>
                            <th class="text-end">
                                <button class="btn btn-success"><i class="bi bi-plus-square"></i> Thêm</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <select class="form-control" asp-items="ViewBag.Products"></select>
                            </td>
                            <td>
                                <input class="form-control" />
                            </td>
                            <td>
                                <input class="form-control" />
                            </td>
                            <td class="text-end align-middle">
                                <button class="btn btn-outline-danger btn-sm"><i class="bi bi-x"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                </div>
        </div>
    </div>
</div>
