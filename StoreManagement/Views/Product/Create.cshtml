@model Product

@{
    ViewData["Title"] = "Add New Product";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div>
            <h1>Thêm sản phẩm</h1>
        </div>
        <div class="row">
            <div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-2">
                        <label asp-for="ProductCode" class="control-label"></label>*
                        <input asp-for="ProductCode" class="form-control" />
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ProductName" class="control-label"></label>*
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Manufacturer" class="control-label"></label>*
                        <input asp-for="Manufacturer" class="form-control" />
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="CategoryId" class="control-label"></label>*
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoriesList" ></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Unit" class="control-label"></label>*
                        <input asp-for="Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Price" class="control-label"></label>*
                        <input asp-for="Price" class="form-control" type="number"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Number" class="control-label"></label>*
                        <input asp-for="Number" class="form-control" type="number"/>
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>  
                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
                        <input type="submit" value="Lưu lại" class="btn btn-success float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
