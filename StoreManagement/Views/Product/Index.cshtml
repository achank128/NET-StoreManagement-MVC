@model X.PagedList.IPagedList<Product>
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;
@{
    ViewData["Title"] = "Products";
}

@*View*@
<div class="row">
    <div class="col-md-8">
        <h2>Danh sách sản phẩm</h2>
    </div>
    <div class="col-md-4 text-end">
        <a class="btn btn-success" asp-controller="Product" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" class="form-control" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                @{
                    var dummy = Model.FirstOrDefault();
                }
                <tr>
                    <th>@Html.DisplayNameFor(m => dummy.ProductCode)</th>
                    <th>@Html.DisplayNameFor(m => dummy.ProductName)</th>
                    <th>@Html.DisplayNameFor(m => dummy.Manufacturer)</th>
                    <th>@Html.DisplayNameFor(m => dummy.CategoryId)</th>
                    <th>@Html.DisplayNameFor(m => dummy.Description)</th>
                    <th>@Html.DisplayNameFor(m => dummy.Unit)</th>
                    <th>@Html.DisplayNameFor(m => dummy.Price)</th>
                    <th>@Html.DisplayNameFor(m => dummy.Number)</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Manufacturer)
                        </td> 
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td class="align-middle text-end">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Chi tiết</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Sửa</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @Html.PagedListPager(Model, page => Url.Action("index", new { page = page }), new PagedListRenderOptions()
        {
        ActiveLiElementClass = "active",
        PageClasses = new[]{ "page-link"},
        LiElementClasses=new[] { "page-item" },
        UlElementClasses = new[] { "pagination", "mt-3" },
        LinkToNextPageFormat = ">",
        LinkToPreviousPageFormat = "<",
        MaximumPageNumbersToDisplay = 5,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always
        })
    </div>
</div>